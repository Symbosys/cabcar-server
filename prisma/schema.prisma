generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  mobile        String         @unique
  name          String
  city          String?
  email         String?        @unique // Add email field (optional)
  photo         String? // Add photo field to store the file path (optional)
  joinedDate    DateTime       @default(now())
  loyaltyPoints Int            @default(0) // Added for loyalty rewards system
  documents     Document? // Added for user documents
  bookings      Booking[]
  notifications Notification[] // Added for user notifications
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([mobile])
}

model admin {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      admin_role @default(sub_admin)
  createdAt DateTime   @default(now())
  updatedAt DateTime

  @@index([email])
}

enum admin_role {
  admin
  sub_admin
}

model Car {
  id                 Int          @id @default(autoincrement())
  name               String
  number             String       @unique
  typeId             Int? // Added to link to VehicleType
  type               VehicleType? @relation(fields: [typeId], references: [id]) // Added relationship
  fuel               String?
  transmission       String?
  ac                 Boolean      @default(false)
  seats              Int
  available          Boolean      @default(true)
  location           String?
  latitude           Float?
  longitude          Float?
  features           String?
  benefits           String?
  cancellationPolicy String?
  pricePerKm         Float?       @default(0)
  pricePerDay        Float?       @default(0)
  driverCharge       Float
  convenienceFee     Float?       @default(0)
  tripProtectionFee  Float?       @default(0)
  deposit            Float?
  images             Json
  bookings           Booking[]
  locations          Location[]
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@index([number])
  @@index([available])
  @@index([typeId])
}

model VehicleType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String? // Optional description
  cars        Car[] // Relationship to Car model
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
}

model Booking {
  id            Int           @id @default(autoincrement())
  vehicleId     Int
  customerId    Int
  pickupDate    DateTime
  returnDate    DateTime
  amount        Float
  driver        Boolean       @default(false)
  address String?
  status        Orderstatus   @default(Upcoming)
  paymentStatus Paymentstatus @default(Pending)
  paymentMethod PaymentMethod @default(Cash)
  car           Car           @relation(fields: [vehicleId], references: [id])
  customer      User          @relation(fields: [customerId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Payment       Payment[]

  @@index([vehicleId])
  @@index([customerId])
  @@index([status])
}

enum Orderstatus {
  Upcoming
  Ongoing
  Completed
}

enum Paymentstatus {
  Pending
  Paid
  Failed
  Refunded
}

enum PaymentMethod {
  Cash
  Razapay
}

model Payment {
  id            Int           @id @default(autoincrement())
  bookingId     Int
  amount        Float
  status        Paymentstatus @default(Pending)
  paymentMethod PaymentMethod @default(Cash)

  booking Booking @relation(fields: [bookingId], references: [id])

  paidAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Location {
  id        Int      @id @default(autoincrement())
  carId     Int
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  car       Car      @relation(fields: [carId], references: [id])
  createdAt DateTime @default(now())

  @@index([carId])
  @@index([timestamp])
}

model Document {
  id                     Int      @id @default(autoincrement())
  userId                 Int      @unique
  user                   User     @relation(fields: [userId], references: [id])
  aadhaarNumber          String?  @unique
  drivingLicenseNumber   String?  @unique
  aadhaarVerified        Boolean  @default(false)
  drivingLicenseVerified Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@index([aadhaarNumber])
  @@index([drivingLicenseNumber])
  @@index([userId])
}

model Otp {
  id        Int      @id @default(autoincrement())
  mobile    String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([mobile])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  read      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Driver {
  id              Int     @id @default(autoincrement())
  name            String
  licenseNumber   String  @unique
  location        String?
  experienceYears Int
  image           Json?
  available       Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isActive      Boolean         @default(true)
  DriverBooking DriverBooking[]

  @@index([licenseNumber])
}

model DriverBooking {
  id        Int    @id @default(autoincrement())
  driverId  Int
  bookingId Int
  driver    Driver @relation(fields: [driverId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([driverId])
  @@index([bookingId])
}
